<div class="container">
    @foreach (var category in ViewBag.Categories)
    {
        <div class="product-card">
            <h3>@category.Description</h3>
            <div class="button-product">
            <a asp-controller="Category" asp-action="EditCategory" asp-route-id=@category.Id class="btn btn-primary">Change</a>
            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id=@category.Id class="btn btn-danger">Delete</a>
        </div>
        </div>
    }
    <div class="button-success">
    <a asp-controller="Category" asp-action="AddCategory" class="btn btn-success">Добавить категорию</a>
    </div>
</div>
