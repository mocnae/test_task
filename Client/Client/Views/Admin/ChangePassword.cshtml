@model ChangePasswordViewModel

<h2>Изменить пароль</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password1)
        @Html.PasswordFor(m => m.Password1, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password1, "", new { @class = "text-danger" })
    </div>
    <button asp-controller="Admin" asp-action="ChangePassword" asp-route-id="@ViewBag.UserId" type="submit" class="btn btn-primary">Изменить пароль</button>
}
