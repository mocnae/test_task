<div class="container">
    <div class="product-container">
        @foreach (var user in ViewBag.Users)
        {
            <div class="product-card">
                <h2>@user.UserName</h2>
                    <div class="user-info">
                        <h5>Id: @user.Id</h5>
                        <p>Role: @user.Role</p>
                        <p>IsBlocked: @user.IsBlocked</p>
                    </div>
                    <div class="button-product">
                        <a asp-controller="Admin" asp-action="ChangePassword" asp-route-id=@user.Id class="btn btn-primary">Изменить пароль</a>
                        <a asp-controller="Admin" asp-action="BlockUser" asp-route-id=@user.Id class="btn btn-warning">Заблокировать</a>
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id=@user.Id class="btn btn-danger">Удалить</a>
                    </div>
            </div>
        }
    </div>
    
</div>
<div class="button-success">
    <a asp-controller="Admin" asp-action="AddUser" class="btn btn-success">Добавить пользователя</a>
</div>